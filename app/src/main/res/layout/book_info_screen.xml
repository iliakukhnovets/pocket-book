<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/my_book_info_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_info_screen_app_bar_height"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/my_book_info_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/black_haze"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="@dimen/book_info_screen_margin_expanded_title"
            app:expandedTitleMarginEnd="@dimen/book_info_screen_margin_expanded_title"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/collapsing_toolbar_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/book_info_screen_margin_expanded_title"
                android:layout_marginBottom="@dimen/book_info_screen_margin_expanded_sub_title"
                android:textSize="@dimen/book_info_screen_text_size_small" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_book_info_toolbar"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:titleTextAppearance="@color/white"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_back_brown_24">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_book_info_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_margin="@dimen/book_info_screen_margin_small" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>