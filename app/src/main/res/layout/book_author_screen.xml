<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/book_author_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_haze"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_back_brown_24" />
            <!--TODO: delete nested cardView -->

            <androidx.cardview.widget.CardView
                android:id="@+id/book_author_image_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="@dimen/book_author_screen_corner_radius"
                android:layout_marginTop="@dimen/book_author_screen_small_margin"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/book_author_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/book_author_name"
                style="@style/TextView.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                android:textSize="@dimen/book_author_screen_text_size_big"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_image_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/book_author_subscribe_to_updates_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                android:background="@drawable/round_corners_10dp"
                android:backgroundTint="@color/light_orange"
                android:text="@string/book_author_subscribe_to_updates"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/book_author_update_btn_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                android:text="@string/book_author_subscribe_btn_description"
                android:textAlignment="center"
                android:textSize="@dimen/book_author_screen_text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_subscribe_to_updates_btn" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/book_author_biography"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_small_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/book_author_screen_text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_update_btn_description" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_author_biography">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView6"
                        style="@style/TextView.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/book_author_screen_small_margin"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:text="@string/book_author_all_books"
                        android:textSize="@dimen/book_author_screen_text_size_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.023"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/book_author_books_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="@+id/textView6"
                        app:layout_constraintHorizontal_bias="0.006"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/book_author_all_books_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.931"
                        app:layout_constraintStart_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_search_screen_category_24" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/book_author_all_books_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/book_author_screen_extra_small_margin"
                        android:layout_marginEnd="@dimen/book_author_screen_extra_small_margin"
                        android:layout_marginBottom="@dimen/book_author_screen_extra_small_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/book_author_books_number" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView8"
                        style="@style/TextView.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:text="@string/book_author_all_audio_books"
                        android:textSize="@dimen/book_author_screen_text_size_normal"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.045"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/book_author_audio_books_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/textView8"
                        app:layout_constraintHorizontal_bias="0.015"
                        app:layout_constraintStart_toStartOf="@+id/textView8"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/book_author_audio_books_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/book_author_screen_extra_small_margin"
                        android:layout_marginTop="@dimen/selected_book_screen_margin_small"
                        android:layout_marginEnd="@dimen/book_author_screen_extra_small_margin"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/book_author_screen_normal_margin"
                android:layout_marginTop="@dimen/book_author_screen_big_margin"
                android:layout_marginEnd="@dimen/book_author_screen_normal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView10"
                        style="@style/TextView.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:text="@string/book_author_related_authors"
                        android:textSize="@dimen/book_author_screen_text_size_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.027"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/book_author_related_authors_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/book_author_screen_extra_small_margin"
                        android:layout_marginTop="@dimen/book_author_screen_small_margin"
                        android:layout_marginEnd="@dimen/book_author_screen_extra_small_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>