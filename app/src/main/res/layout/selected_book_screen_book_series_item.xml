<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/black_haze">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/related_book_series_image"
        android:layout_width="@dimen/selected_book_screen_related_book_item_width"
        android:layout_height="@dimen/selected_book_screen_related_book_item_height"
        android:background="@drawable/round_corners_10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_series_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_book_round_text_view"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/selected_book_screen_text_size_small"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/related_book_series_rating"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/related_book_series_rating" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/related_book_series_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/selected_book_screen_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/related_book_series_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_series_name"
        style="@style/TextView.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/selected_book_screen_margin_small"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/related_book_series_rating" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_series_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/selected_book_screen_margin_small"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/related_book_series_name" />
</androidx.constraintlayout.widget.ConstraintLayout>