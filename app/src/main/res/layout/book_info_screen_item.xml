<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_book_info_item_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/book_info_screen_item_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/my_books_info_screen_item_image1"
            android:layout_width="@dimen/book_info_screen_book_image_width"
            android:layout_height="@dimen/book_info_screen_book_image_height"
            android:layout_margin="@dimen/book_info_screen_margin_small"
            android:elevation="@dimen/book_info_screen_book_image_elevation"
            app:cardCornerRadius="@dimen/book_info_screen_corners_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/my_book_info_item_image"
                android:layout_width="@dimen/book_info_screen_book_image_width"
                android:layout_height="@dimen/book_info_screen_book_image_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/my_book_info_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/book_info_screen_buttons_margin_normal"
            android:layout_marginEnd="@dimen/book_info_screen_buttons_margin_normal"
            android:background="@drawable/ic_baseline_done_brown_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_book_info_status"
            style="@style/TextView.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/book_info_screen_buttons_margin_big"
            android:background="@drawable/oval_border_orange"
            android:padding="@dimen/book_info_screen_text_padding"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/book_info_screen_text_size_small"
            app:layout_constraintStart_toStartOf="@+id/my_book_info_book_name"
            app:layout_constraintTop_toTopOf="@+id/my_books_info_screen_item_image1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_book_info_book_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/book_info_screen_margin_normal"
            android:layout_marginTop="@dimen/book_info_screen_margin_normal"
            android:textColor="@color/black"
            android:textSize="@dimen/book_info_screen_text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_books_info_screen_item_image1"
            app:layout_constraintTop_toBottomOf="@+id/my_book_info_status" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_book_info_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/book_info_screen_margin_normal"
            android:layout_marginTop="@dimen/book_info_screen_margin_normal"
            android:textSize="@dimen/book_info_screen_text_size_small"
            app:layout_constraintStart_toEndOf="@+id/my_books_info_screen_item_image1"
            app:layout_constraintTop_toBottomOf="@+id/my_book_info_book_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_books_book_info_rating_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/book_info_screen_buttons_height"
            android:layout_marginTop="@dimen/book_info_screen_margin_small"
            android:drawableStart="@drawable/ic_my_books_info_star_24"
            android:padding="@dimen/book_info_screen_padding_minimal"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/book_info_screen_text_size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/my_book_info_book_author"
            app:layout_constraintTop_toBottomOf="@+id/my_book_info_book_author" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_books_book_info_subscribe_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/book_info_screen_buttons_height"
            android:layout_marginTop="@dimen/book_info_screen_margin_small"
            android:drawableStart="@drawable/ic_my_books_info_premium_24"
            android:includeFontPadding="false"
            android:padding="@dimen/book_info_screen_padding_minimal"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/book_info_screen_text_size_small"
            app:layout_constraintStart_toEndOf="@+id/my_books_book_info_rating_btn"
            app:layout_constraintTop_toBottomOf="@+id/my_book_info_book_author" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>