<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_haze">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_books_screen_margin_normal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/my_books_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/my_books_screen_text_padding"
                android:text="@string/my_books_screen_top_tag"
                android:textColor="@color/black"
                android:textSize="@dimen/my_books_screen_text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/my_books_all_user_books"
                style="@style/TextView.Brown"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:textSize="@dimen/my_books_screen_text_size_normal"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/my_books_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523"
                android:focusable="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/my_books_top_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_books_screen_image_card_height"
            app:cardCornerRadius="@dimen/my_books_screen_corners_radius">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_books_top_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_gradient" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/my_books_available_offline"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/my_books_screen_text_size_normal"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_my_books_offline_24"
                    android:text="@string/my_books_screen_available_offline"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/my_books_offline_count"
                    style="@style/TextView.Brown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/my_books_screen_zero_count"
                    android:textAlignment="center"
                    android:textSize="@dimen/my_books_screen_text_size_normal" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/my_books_middle_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_books_screen_margin_large"
            android:background="@drawable/round_corners_10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_books_books_status_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/my_books_shelves_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_books_screen_margin_large"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>