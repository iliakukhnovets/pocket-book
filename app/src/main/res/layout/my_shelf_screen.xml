<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_haze">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_haze"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="enterAlways">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_shelf_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="enterAlways"
            app:navigationIcon="@drawable/ic_back_brown_24">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/my_shelf_toolbar_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/my_shelf_screen_margin_normal"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/my_shelf_screen_toolbar_ready"
                    android:textColor="@color/brown" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_haze"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_shelf_screen_margin_normal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_shelf_screen_image_card_height"
                app:cardCornerRadius="@dimen/my_shelf_screen_corners_radius">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/brown"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/my_shelf_load_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/orange_gradient"
                    android:padding="@dimen/my_shelf_screen_text_padding"
                    android:text="@string/my_shelf_screen_load_poster"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_shelf_screen_menu_card_height"
                android:layout_marginTop="@dimen/my_shelf_screen_margin_large"
                app:cardCornerRadius="@dimen/my_shelf_screen_corners_radius">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/my_shelf_screen_margin_small"
                        android:layout_marginEnd="@dimen/my_shelf_screen_margin_normal"
                        android:backgroundTint="@color/orange"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView3"
                        style="@style/TextView.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginTop="@dimen/my_shelf_screen_margin_normal"
                        android:text="@string/my_shelf_screen_show_every_body"
                        android:textSize="@dimen/my_books_screen_text_size_normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginTop="@dimen/my_shelf_screen_margin_large"
                        android:text="@string/my_shelf_screen_show_every_body_text"
                        android:textSize="@dimen/my_books_screen_text_size_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_shelf_screen_margin_large"
                app:cardCornerRadius="@dimen/my_shelf_screen_corners_radius">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/my_shelf_screen_margin_normal"
                        android:text="@string/my_shelf_screen_about_shelf"
                        android:textSize="@dimen/my_shelf_screen_text_size_normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginBottom="@dimen/my_shelf_screen_margin_small"
                        android:text="@string/my_shelf_screen_name"
                        android:textSize="@dimen/my_shelf_screen_text_size_small" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/my_shelf_name_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginEnd="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginBottom="@dimen/my_shelf_screen_margin_small"
                        android:background="@drawable/round_corners_10dp"
                        android:backgroundTint="@color/black_haze"
                        android:textSize="@dimen/my_shelf_screen_text_size_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginBottom="@dimen/my_shelf_screen_margin_small"
                        android:text="@string/my_shelf_screen_shelf_description"
                        android:textSize="@dimen/my_shelf_screen_text_size_small" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/my_shelf_description_field"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/my_shelf_screen_text_height"
                        android:layout_marginStart="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginEnd="@dimen/my_shelf_screen_margin_normal"
                        android:layout_marginBottom="@dimen/my_shelf_screen_margin_small"
                        android:background="@drawable/round_corners_10dp"
                        android:backgroundTint="@color/black_haze"
                        android:textSize="@dimen/my_shelf_screen_text_size_small" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
